<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/color_primary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-150dp"
            android:src="@drawable/ic_virus">
        </ImageView>
        <ImageView
            android:id="@+id/virus1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"

            android:src="@drawable/ic_virus">
        </ImageView>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/virus1"
            android:src="@drawable/ic_virus" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/regular"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_drop"
                android:drawablePadding="10dp"
                android:fontFamily="@string/bold"
                android:text="India"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/regular"
                android:text="Update at Feb 03,2022"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size0" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/yellow"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size"
                            android:text="Confirm"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:paddingStart="5dp"
                           >
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/blue_pie"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size"
                            android:text="Active"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:paddingStart="5dp"
                            >
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/green_pie"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size"
                            android:text="Recovered"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:paddingStart="5dp"
                            >
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/red_pie"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size"
                            android:text="Death"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:paddingStart="5dp"
                            >
                        </TextView>
                    </LinearLayout>

                </LinearLayout>
                <org.eazegraph.lib.charts.PieChart
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/piechart"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:egInnerPaddingColor="@color/color_primary"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:padding="8dp"
                    app:egLegendTextSize="0sp"
                    app:egLegendHeight="0dp"
                    app:egUsePieRotation="true"
                    app:egValueTextSize="0sp"/>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:columnCount="2">

        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
             android:layout_width="@dimen/card_width"
            android:layout_columnWeight="1"
            app:strokeColor="@color/color_primary"
            android:padding="12dp"
            android:layout_gravity="center"
            app:strokeWidth="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="18dp"
                >

                <LinearLayout
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/yellow"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:text="Confirm"
                        android:textColor="@color/black"
                        android:fontFamily="@string/regular"
                        android:paddingStart="10dp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/totalConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size"
                    android:layout_marginTop="7dp"
                    android:text="1273819"
                    android:textColor="@color/black"
                    android:fontFamily="@string/bold"
                    />
                <TextView
                    android:id="@+id/todayConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_marginTop="7dp"
                    android:text="(+32)"
                    android:textColor="@color/black"
                    android:fontFamily="@string/regular"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="@dimen/card_width"
            android:layout_columnWeight="1"
            app:strokeColor="@color/color_primary"
            android:padding="12dp"
            android:layout_gravity="center"
            app:strokeWidth="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="18dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/blue_pie"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:text="Active"
                        android:textColor="@color/black"
                        android:fontFamily="@string/regular"
                        android:paddingStart="10dp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/totalActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size"
                    android:layout_marginTop="7dp"
                    android:text="1273819"
                    android:textColor="@color/black"
                    android:fontFamily="@string/bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_marginTop="7dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:fontFamily="@string/regular"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="@dimen/card_width"
            android:layout_marginTop="12dp"
            android:layout_columnWeight="1"
            app:strokeColor="@color/color_primary"
            android:padding="12dp"
            android:layout_gravity="center"
            app:strokeWidth="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="18dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/green_pie"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:text="Recovered"
                        android:textColor="@color/black"
                        android:fontFamily="@string/regular"
                        android:paddingStart="10dp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/totalRecovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size"
                    android:layout_marginTop="7dp"
                    android:text="1273819"
                    android:textColor="@color/black"
                    android:fontFamily="@string/bold"
                    />
                <TextView
                    android:id="@+id/todayRecovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_marginTop="7dp"
                    android:text="(+32)"
                    android:textColor="@color/black"
                    android:fontFamily="@string/regular"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="@dimen/card_width"
            android:layout_columnWeight="1"
            app:strokeColor="@color/color_primary"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:layout_gravity="center"
            app:strokeWidth="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="18dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/red_pie"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:text="Death"
                        android:textColor="@color/black"
                        android:fontFamily="@string/regular"
                        android:paddingStart="10dp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/totalDeath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size"
                    android:layout_marginTop="7dp"
                    android:text="1273819"
                    android:textColor="@color/black"
                    android:fontFamily="@string/bold"
                    />
                <TextView
                    android:id="@+id/todayDeath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_marginTop="7dp"
                    android:text="(+32)"
                    android:textColor="@color/black"
                    android:fontFamily="@string/regular"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="@dimen/card_width"
            android:layout_columnWeight="1"
            app:strokeColor="@color/color_primary"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:layout_gravity="center"
            app:strokeWidth="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="18dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/pink"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:text="Tests"
                        android:textColor="@color/black"
                        android:fontFamily="@string/regular"
                        android:paddingStart="10dp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/totalTests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size"
                    android:layout_marginTop="7dp"
                    android:text="1273819"
                    android:textColor="@color/black"
                    android:fontFamily="@string/bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_marginTop="7dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:fontFamily="@string/regular"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </GridLayout>
</LinearLayout>